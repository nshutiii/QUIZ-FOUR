<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvUnitNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit No: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSquareFootage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Square Footage: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvDailyRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Rent: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvIsAirBnb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is AirBnB: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvAllowsPets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allows Pets: "
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="#F44336" />

    </LinearLayout>

</LinearLayout>
